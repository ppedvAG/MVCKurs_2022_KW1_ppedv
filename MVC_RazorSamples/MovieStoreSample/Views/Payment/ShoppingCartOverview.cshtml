@model IEnumerable<MovieStoreSample.Models.Movie>

@{
    ViewData["Title"] = "ShoppingCartOverview";
}

<h1>ShoppingCartOverview</h1>


@if (Model.Count() != 0)
{
    <form asp-controller="Payment" method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReleaseYear)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Genre)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) 
                {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReleaseYear)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Genre)
                            </td>
                            <td>
                                <button class="btn-dark" asp-action="Delete" asp-route-id="@item.Id" type="submit">-</button>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </form>

    <a class="btn-dark" asp-controller="Payment" asp-action="Pay">Gehe zur Kasse</a>
}
else
{
    <p>Keine Artikel in Warenkorb</p>
}