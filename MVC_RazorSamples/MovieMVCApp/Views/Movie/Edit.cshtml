@model MovieMVCApp.Models.Movie

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">

                <label asp-for="Title" class="control-label"></label>
                <!-- <input class="form-control" type="text" data-val="true" data-val-required="The Title field is required." id="Title" name="Title" value="" /> -->
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>

                <!--  <input class="form-control" type="text" id="Description" name="Description" value="" />-->
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreType" class="control-label"></label>
                <select class="form-control" asp-for="GenreType" asp-items="Html.GetEnumSelectList<Genre>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="GenreType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IMDBRating" class="control-label"></label>
                <input asp-for="IMDBRating" class="form-control" />
                <span asp-validation-for="IMDBRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
